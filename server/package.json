{
  "name": "talkn-server",
  "version": "1.0.0",
  "description": "talkn server",
  "scripts": {
    "server-build": "tsc --project ./tsconfig.json",
    "server-dev": "nodemon -L",
    "server-prof": "node --prof-process $(ls -t isolate*.log | head -n 1) > processed.txt",
    "server": "yarn server-build && yarn server-dev",
    "pm2": "pm2 start ./pm2-production.json",
    "pm2-dev": "pm2 start ./pm2-dev.json --watch",
    "pm2-stop": "pm2 stop talkn-server",
    "pm2-restart": "pm2 restart talkn-server",
    "pm2-status": "pm2 status talkn-server",
    "prod": "forever start -c 'ts-node -r tsconfig-paths/register' src/run.ts",
    "stop": "forever stopall"
  },
  "author": "mirazle <mirazle2069@gmail.com> (https://github.com/mirazle)",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/basic-auth": "^1.1.3",
    "@types/cheerio": "^0.22.31",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/formidable": "2.0.5",
    "@types/iconv": "^3.0.1",
    "@types/multer": "1.4.7",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/redis": "^2.8.31",
    "@types/request": "^2.48.8",
    "multer": "1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/webpack-env": "^1.18.1",
    "basic-auth": "~2.0.1",
    "body-parser": "^1.20.1",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-basic-auth": "~1.2.1",
    "express-csp-header": "5.1.0",
    "express-session": "^1.17.3",
    "google-auth-library": "8.7.0",
    "helmet": "6.0.0",
    "iconv": "^3.0.1",
    "jschardet": "^3.0.0",
    "mongoose": "^6.7.2",
    "nodemailer": "^6.8.0",
    "pm2": "^5.3.0",
    "pm2-logrotate": "^2.7.0",
    "process": "^0.11.10",
    "request": "^2.88.2",
    "socket.io": "^4.5.3",
    "socket.io-redis": "^6.1.1",
    "tslib": "2.4.1"
  }
}
